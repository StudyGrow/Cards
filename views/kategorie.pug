doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Vorlesungen
  // Bootstrap CSS
  link(rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css' integrity='sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh' crossorigin='anonymous')
  link(rel='stylesheet' href='https://use.fontawesome.com/releases/v5.7.0/css/all.css' integrity='sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ' crossorigin='anonymous')
.container#con
  
  if vorlesungen.length!=0
    br
    h4 Vorlesungen
    ul#vlList.list-group
        each vl in vorlesungen
            
            li.list-group-item
                a(href='/vorlesung/'+vl.abrv) #{vl.name}
  br
  h4 Vorlesung hinzuf&uuml;gen
  form#addVl
    .form-group
      input#vorlesung.form-control(name='thema' type='text' placeholder='Vorlesung' required)
    .form-group
      input#abrv.form-control(name='url' type='text' placeholder='Abkürzung' required)
    input.btn.btn-primary.mb-2(id='#addBtn' type='button' onclick='addVl()' value='Hinzufügen' )
script.
  function addVl(){
  
  var ul = document.getElementById("vlList");
  var vorlesung = document.getElementById('vorlesung');
  var abrv = document.getElementById('abrv');
  var li = document.createElement('LI');
  if(vorlesung.value.length>0 && abrv.value.length>0){

    if( !document.getElementById("vlList")){
        ul=document.createElement('UL');
        ul.setAttribute('id','vlList');
        ul.setAttribute('class','list-group');
        document.getElementById('con').prepend(ul);
    }
  var ul = document.getElementById("vlList");
  var vorlesung = document.getElementById('vorlesung');
  var abrv = document.getElementById('abrv');
  var li = document.createElement('LI');
  li.setAttribute('class','list-group-item');
  li.innerHTML = `<a href="/${abrv.value}">${vorlesung.value}</a>`;
  ul.appendChild(li);
      fetch('/addVl',{
  method: 'POST',
  headers: {
  'Accept': 'application/json, text/plain, */*',
  'Content-type': 'application/json'
  },
  body:JSON.stringify({
    name:vorlesung.value,
    abrv:abrv.value
  })
  })
  .then((res)=>{
      if(res.status==406){
          var msg = document.createElement("div");
            msg.setAttribute('class','alert alert-warning alert-dismissible fade show');
            msg.setAttribute('role','alert');
            msg.innerHTML= 'Fehlerhaftes Format: dein Input ist zu groß<button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>';
            document.getElementById('con').prepend(msg);
      }
      res.json()
  })
  .catch((err)=>{
      
  });
  abrv.value='';
  vorlesung.value='';
  }
  else{
       var msg = document.createElement("div");
            msg.setAttribute('class','alert alert-warning alert-dismissible fade show');
            msg.setAttribute('role','alert');
            msg.innerHTML= 'Bitte fülle alle Felder<button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>';
            document.getElementById('con').prepend(msg);
  }
  }
